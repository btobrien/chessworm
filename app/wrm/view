#!/bin/bash

top=0

while read input; do

    node=$(cut -d' ' -f1 <<<"$input") 
    [ "$node" != '.' ] && brd 'set' 'wrm' <<<"$node"

    line=$(cut -d' ' -f2 <<<$input)
    clock=$(cut -d' ' -f3 <<<$input); ((clock++))
    tree=$(cut -d' ' -f4 <<<$input)

    length=$(tput lines); ((length--)); ((length--))

    if (( $clock <= $top )) && (( $clock != 0 )); then
        top=$(( clock - 1 ))
        oldtree=''
    fi

    if ! [ "$tree" == "$oldtree" ]; then
        tput civis
        tput cup 0 0
        ./window $top $length <<<"$tree"
        width=$?
        oldtree=$tree
        tput ed
        tput cnorm
    fi

    bottom=$((top + length ))
    diff=$(( clock - bottom + 1 ))
    if (( $diff > 0 )); then
        tput cup $length  0
        ./window $bottom $diff <<<"$tree"
        echo
        top=$(( top + diff ))
    fi

    tput cup $((clock - top)) $((width * line + 5))
done

        #key=$(cut -d' ' -f1 <<<$input | sed 's/\///g' | sed 's/_//' | cut -d'_' -f1)
        #if [ -f $graph/$key ]; then
            #cat $graph/$key | center
        #fi
